
@{
    ViewData["Title"] = "Perfil";
}

<div class="row">
    <h1 style="margin-top: 5%">Perfil</h1>
    <img src="~/img/tdea.png" style="margin-left:900px; width:100px; margin-top:20px" />
</div>
<br />
<hr style="border-color:black" />
<div class="container" style="margin-top:65px">
    <div class="row">
        <form>
            <div>
                <select name="tipo" id="tipo" class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    <option value="#">Tipo</option>
                    <option value="r">Cedula</option>
                    <option value="a">T.I</option>
                    <option value="v">Pasaporte</option>
                    <option value="v">C.Extrangero</option>
                </select>
                <select name="programa" id="programa" class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    <option value="#">Programa</option>
                    <option value="r">ESP.TI</option>
                    <option value="a">MG.TI</option>
                    <option value="v">MGRMA</option>
                </select>
                <select name="tiporol" id="tiporol" class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    <option value="#">Tipo de rol</option>
                    <option value="r">Administrador</option>
                    <option value="a">Coordinador</option>
                    <option value="v">Estudiante</option>
                </select>
                <select name="genero" id="genero" class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                    <option value="#">Genero</option>
                    <option value="r">Masculino</option>
                    <option value="a">Femenino</option>
                    <option value="v">Otro</option>
                </select>
            </div>
            <div class="row" style="margin-top:100px">
                <div class="form-group" style="margin-left:120px">
                    <label for="ndocumento" style=""><b>N.Documento</b></label>
                    <input type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="ndocumento" placeholder="Ej. 11145687">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label for="nombre" style=""><b>nombre</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="nombre" placeholder="Ej. Juan">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label for="apellido" style=""><b>Apellido</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="apellido" placeholder="Ej. Perez">
                </div>
            </div>
            <div class="row" style="margin-top:100px">
                <div class="form-group" style="margin-left:120px">
                    <label for="email" style=""><b>Correo</b></label>
                    <input type="email" class="form-control" style="border-color:black; border-width:2px; width:200px" id="email" placeholder="Ej. zapata@juan.com">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label for="direccion" style=""><b>Direccion</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion" placeholder="Ej. Cr12#23c45">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label for="telefono" style=""><b>Telefono</b></label>
                    <input type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono" placeholder="Ej. 857687">
                </div>
            </div>
            <div class="row" style="margin-top:100px">
                <div class="form-group" style="margin-left:115px">
                    <label for="telefono" style=""><b>Adjuntar certificado</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono" placeholder="">
                </div>
                <button class="btn btn-outline-secondary" type="submit" style="height:40px; margin-top:30px">examinar</button>
            </div> 
            <div class="row" style="margin-left:330px; margin-top:50px">
                <button type="submit" class="btn btn-outline-dark" style="margin-left: 30px; margin-top: 35px; margin-bottom: 30px;">Enviar</button>
                <div style="margin-left:50px">
                    <p>¿Here egresado?</p>
                    <input type="radio" id="contactChoice1"
                           name="contact" value="Si">
                    <label for="contactChoice1">Si</label>
                    <input type="radio" id="contactChoice2"
                           name="contact" value="No">
                    <label for="contactChoice2">No</label>
                </div>
                <button type="submit" class="btn btn-outline-dark" asp-area="" asp-controller="Estudiante" asp-action="MenuEstudiante" style="margin-left: 30px; margin-top: 35px; margin-bottom: 30px;">Cancelar</button>
            </div>
        </form>
    </div>
</div>

