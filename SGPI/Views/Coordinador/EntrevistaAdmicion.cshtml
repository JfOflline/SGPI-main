@model SGPI.Models.Usuario
@{
    ViewData["Title"] = "EntrevistaAdmicion";
}

<div class="row">
    <h1 style="margin-top: 5%">Entrevista/Admicion</h1>
    <img src="~/img/tdea.png" style="margin-left:650px; width:100px; margin-top:20px" />
</div>
<br />
<hr style="border-color:black" />
<div class="container" style="margin-top:65px">
    <div class="row">

        <div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdTipoDoc", new SelectList(ViewBag.tipodoc, "IdTipoDoc", "ValTipoDoc"), "Documento")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programa, "IdPrograma", "ValPrograma"), "Programa")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdRol", new SelectList(ViewBag.rol, "IdRol", "ValRol"), "Rol")
            </div>
            <div class="btn btn-outline-darck" style="border:solid 2px; margin-left: 100px">
                @Html.DropDownList("IdGenero", new SelectList(ViewBag.genero, "IdGenero", "ValGenero"), "Genero")
            </div>
        </div>
        <div class="row" style="margin-top:30px">
            <div class="form-group" style="margin-left:120px">
                <label asp-for="Documento" class="control-label" style=""><b>N.Documento</b></label>
                <input asp-for="Documento" type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="ndocumento" placeholder="Ej. 11145687">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Nombre" class="control-label" style=""><b>nombre</b></label>
                <input asp-for="Nombre" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="nombre" placeholder="Ej. Juan">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Apellido" class="control-label" style=""><b>Apellido</b></label>
                <input asp-for="Apellido" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="apellido" placeholder="Ej. Perez">
            </div>
        </div>
        <div class="row" style="margin-top:30px">
            <div class="form-group" style="margin-left:120px">
                <label asp-for="Email" class="control-label" style=""><b>Correo</b></label>
                <input asp-for="Email" type="email" class="form-control" style="border-color:black; border-width:2px; width:200px" id="email" placeholder="Ej. zapata@juan.com">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Direccion" class="control-label" style=""><b>Direccion</b></label>
                <input asp-for="Direccion" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion" placeholder="Ej. Cr12#23c45">
            </div>
            <div class="form-group" style="margin-left:115px">
                <label asp-for="Telefono" class="control-label" style=""><b>Telefono</b></label>
                <input asp-for="Telefono" type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono" placeholder="Ej. 857687">
            </div>
        </div>
        <form method="post">
            <div class="row" style="margin-top:30px">
                <div class="form-group" style="margin-left:120px">
                    <label class="control-label" style=""><b>Fecha Inicio</b></label>
                    <input class="btn btn-outline-dark" type="date" id="start"
                           min="2022-01-01" pattern="MM-dd-yy" name="fecha">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label class="control-label" style=""><b>Estado</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion" placeholder="Ej. Cr12#23c45" name="estado">
                </div>
            </div>
            <div class="row" style="margin-left:330px; margin-top:50px">
                <button type="submit" class="btn btn-outline-dark" style="margin-left: 30px; margin-top: 35px; margin-bottom: 30px;">Enviar</button>
                <div style="margin-left:50px">
                    <p>¿Here egresado?</p>
                    <input type="radio" id="contactChoice1"
                           name="check" value="Si">
                    <label for="contactChoice1">Si</label>
                    <input type="radio" id="contactChoice2"
                           name="check" value="No">
                    <label for="contactChoice2">No</label>
                </div>
                <button type="submit" class="btn btn-outline-dark" asp-area="" asp-controller="Administrador" asp-action="MenuAdministrador" style="margin-left: 30px; margin-top: 35px; margin-bottom: 30px;">Cancelar</button>
            </div>
        </form>
    </div>
</div>

