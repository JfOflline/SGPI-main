@model SGPI.Models.Programacion
@{
    ViewData["Title"] = "Anadir";
}

<div class="row">
    <h1 style="margin-top: 5%;margin-left:25px">Añadir Asignatura</h1>
    <img src="~/img/tdea.png" style="margin-left:650px; width:100px; margin-top:20px" />
</div>
<br />
<hr style="border-color:black" />
<div class="container" style="margin-top:65px">
    <div class="row">
        <form method="post">
            <div class="row" style="margin-top:80px;margin-left:35px">
                <div style="margin-left: 100px">
                    @Html.DropDownList("IdPrograma", new SelectList(ViewBag.programas, "IdPrograma", "ValPrograma"), "Programa",new {@class="btn btn-outline-dark" })
                </div>
                <div class="form-group" style="margin-left:120px">
                    <label asp-for="FechaIncio" class="control-label" style=""><b>Fecha Inicio</b></label>
                    <input class="btn btn-outline-dark" asp-for="FechaIncio" type="date" id="start"
                           value=""
                           min="2022-01-01" pattern="MM-dd-yy">
                </div>
                <div class="form-group" style="margin-left:115px">
                    <label asp-for="FechaFin" class="control-label" style=""><b>Fecha Fin</b></label>
                    <input class="btn btn-outline-dark" asp-for="FechaFin" type="date" id="start"
                           value=""
                           min="2022-01-01" pattern="MM-dd-yy">
                </div>
            </div>
            <div class="row" style="margin-top:100px">
                <div class="form-group" style="margin-left:65px">
                    <label asp-for="Bloque" class="control-label" style=""><b>Bloque</b></label>
                    <input asp-for="Bloque" type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="email" placeholder="Ej. 5">
                </div>
                <div class="form-group" style="margin-left:65px">
                    <label asp-for="Salon" class="control-label" style=""><b>Sala</b></label>
                    <input asp-for="Salon" type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="direccion" placeholder="Ej. 110">
                </div>
                <div class="form-group" style="margin-left:65px">
                    <label class="control-label" style=""><b>Modulo</b></label>
                    <input type="number" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono" placeholder="Ej. 857687">
                </div>
                <div class="form-group" style="margin-left:65px">
                    <label class="control-label" style=""><b>Codigo Asignatura</b></label>
                    <input type="text" class="form-control" style="border-color:black; border-width:2px; width:200px" id="telefono" placeholder="Ej. 857687" name="CAsignatura">
                </div>
            </div>
            <div style="margin-left:330px;margin-top:50px">
                <button type="submit" class="btn btn-outline-dark" style="margin-left: 80px; margin-top: 35px; margin-bottom: 30px;">Enviar</button>
                <button type="submit" class="btn btn-outline-dark" asp-area="" asp-controller="Coordinador" asp-action="ProgramarAsignatura" style="margin-left: 80px; margin-top: 35px; margin-bottom: 30px;">Cancelar</button>
            </div>
        </form>
    </div>
</div>


